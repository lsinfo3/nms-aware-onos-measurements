#sleep 8
#gnome-terminal -e "bash -c \"cd $HOME/Masterthesis/vm/secondOnosVm; vagrant up; sleep 3; vagrant ssh -c 'source /home/ubuntu/onos/tools/dev/bash_profile; onos-karaf; exec bash'; exec bash\""
